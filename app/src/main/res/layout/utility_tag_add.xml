<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_rounded_rect"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingEnd="12dp"
    android:paddingStart="12dp"
    android:paddingTop="4dp">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/utility_tag_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Type to add"
        android:imeActionLabel="Add"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorMaterialLight87"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/utility_tag_add"
        android:layout_width="@dimen/utility_tag_icon_size"
        android:layout_height="@dimen/utility_tag_icon_size"
        android:layout_marginStart="8dp"
        android:padding="0dp"
        android:rotation="45"
        android:src="@drawable/ic_clear_white_24dp"/>

</LinearLayout>