<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/tag_height"
    android:layout_marginBottom="@dimen/tag_vertical_margin"
    android:layout_marginEnd="@dimen/tag_horizontal_margin"
    android:layout_marginStart="@dimen/tag_horizontal_margin"
    android:layout_marginTop="@dimen/tag_vertical_margin"
    android:background="@drawable/bg_rounded_rect"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/tag_vertical_padding"
    android:paddingEnd="@dimen/tag_horizontal_padding"
    android:paddingStart="@dimen/tag_horizontal_padding"
    android:paddingTop="@dimen/tag_vertical_padding">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/utility_tag_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="Type to add"
        android:imeActionLabel="Add"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/list_tag_text"
        android:textColorHint="@color/list_tag_hint"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/utility_tag_add"
        android:layout_width="@dimen/utility_tag_icon_size"
        android:layout_height="@dimen/utility_tag_icon_size"
        android:layout_marginStart="8dp"
        android:padding="0dp"
        android:rotation="45"
        android:src="@drawable/ic_clear_black_24dp"
        android:tint="@color/list_tag_text"/>

</LinearLayout>