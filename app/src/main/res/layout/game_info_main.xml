<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    android:paddingTop="8dp">

    <!--Scores-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardBackgroundColor="@color/grey900"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/game_info_scores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/game_info_home_name"
                    android:textAppearance="@style/TextTeamTitle"/>

                <TextView
                    android:id="@+id/game_info_score_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="10"
                    android:textAppearance="@style/TextGameScore"/>

                <TextView
                    android:id="@+id/game_info_side_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="T"
                    android:textAppearance="@style/TextGameSide"
                    android:textColor="@color/yellowT"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/game_info_away_name"
                    android:textAppearance="@style/TextTeamTitle"/>

                <TextView
                    android:id="@+id/game_info_score_away"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="3"
                    android:textAppearance="@style/TextGameScore"/>

                <TextView
                    android:id="@+id/game_info_side_away"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CT"
                    android:textAppearance="@style/TextGameSide"
                    android:textColor="@color/blueCT"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="@string/game_info_stats_header"
        android:textAppearance="@style/TextListSubHeader"/>

    <!--Stats-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardBackgroundColor="@color/grey900"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/game_info_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/game_info_stats_card_padding"
            android:paddingTop="@dimen/game_info_stats_card_padding">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/game_info_stats_gap"
                    android:gravity="center"
                    android:text="12"
                    android:textAppearance="@style/TextGameStatsAmount"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/game_info_kills"
                    android:textAppearance="@style/TextGameStatsName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/game_info_stats_gap"
                    android:gravity="center"
                    android:text="3"
                    android:textAppearance="@style/TextGameStatsAmount"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/game_info_assists"
                    android:textAppearance="@style/TextGameStatsName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/game_info_stats_gap"
                    android:gravity="center"
                    android:text="7"
                    android:textAppearance="@style/TextGameStatsAmount"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/game_info_deaths"
                    android:textAppearance="@style/TextGameStatsName"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/game_info_stats_gap"
                    android:gravity="center"
                    android:text="1.71"
                    android:textAppearance="@style/TextGameStatsAmount"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="KDR"
                    android:textAppearance="@style/TextGameStatsName"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="Health and armor"
        android:textAppearance="@style/TextListSubHeader"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardBackgroundColor="@color/grey900"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="24dp"
                android:paddingTop="24dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/health_2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="100"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="24dp"
                android:paddingTop="24dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:src="@drawable/armor_2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="97"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"/>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test intro"/>

    <Button
        android:id="@+id/testDiscover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test discovery"/>

</LinearLayout>