<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_rounded_rect"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingEnd="12dp"
    android:paddingStart="12dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/utility_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:maxEms="8"
        android:text="utility_tag_name"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/utility_tag_remove"
        android:layout_width="@dimen/utility_tag_icon_size"
        android:layout_height="@dimen/utility_tag_icon_size"
        android:layout_marginStart="@dimen/utility_tag_icon_margin_start"
        android:contentDescription="remove tag"
        android:padding="0dp"
        android:src="@drawable/ic_clear_white_24dp"
        android:visibility="gone"/>

</LinearLayout>