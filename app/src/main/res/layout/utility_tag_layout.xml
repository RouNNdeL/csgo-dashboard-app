<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--Mock layout used for animation purposes-->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/utility_tag_layout_mock"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tag_height"
        android:layout_marginBottom="@dimen/tag_vertical_margin"
        android:layout_marginEnd="@dimen/tag_horizontal_margin"
        android:layout_marginStart="@dimen/tag_horizontal_margin"
        android:layout_marginTop="@dimen/tag_vertical_margin"
        android:background="@drawable/bg_rounded_rect"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/tag_vertical_padding"
        android:paddingEnd="@dimen/tag_horizontal_padding"
        android:paddingStart="@dimen/tag_horizontal_padding"
        android:paddingTop="@dimen/tag_vertical_padding"
        android:visibility="gone">

        <TextView
            android:id="@+id/utility_tag_name_mock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="8"
            android:text="utility_tag_name"
            android:textColor="@color/list_tag_text"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/utility_tag_remove_mock"
            android:layout_width="@dimen/utility_tag_icon_size"
            android:layout_height="@dimen/utility_tag_icon_size"
            android:layout_marginStart="@dimen/tag_icon_margin_start"
            android:contentDescription="remove tag"
            android:padding="0dp"
            android:src="@drawable/ic_clear_black_24dp"
            android:tint="@color/list_tag_text"
            android:visibility="gone"/>

    </LinearLayout>

    <!--Actual layout -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/utility_tag_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tag_height"
        android:layout_marginBottom="@dimen/tag_vertical_margin"
        android:layout_marginEnd="@dimen/tag_horizontal_margin"
        android:layout_marginStart="@dimen/tag_horizontal_margin"
        android:layout_marginTop="@dimen/tag_vertical_margin"
        android:background="@drawable/bg_rounded_rect"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/tag_vertical_padding"
        android:paddingEnd="@dimen/tag_horizontal_padding"
        android:paddingStart="@dimen/tag_horizontal_padding"
        android:paddingTop="@dimen/tag_vertical_padding">

        <TextView
            android:id="@+id/utility_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="8"
            android:text="utility_tag_name"
            android:textColor="@color/list_tag_text"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/utility_tag_remove"
            android:layout_width="@dimen/utility_tag_icon_size"
            android:layout_height="@dimen/utility_tag_icon_size"
            android:layout_marginStart="@dimen/tag_icon_margin_start"
            android:contentDescription="remove tag"
            android:padding="0dp"
            android:src="@drawable/ic_clear_black_24dp"
            android:tint="@color/list_tag_text"
            android:visibility="gone"/>

    </LinearLayout>
</FrameLayout>