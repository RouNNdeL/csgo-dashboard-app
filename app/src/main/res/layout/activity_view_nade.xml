<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_nade_coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="false"
    android:paddingTop="0dp">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/view_nade_appbar"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/view_nade_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <android.support.v7.widget.Toolbar
                android:id="@+id/view_nade_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:transitionName="@string/transition_utility_grenade_title"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
            </android.support.v7.widget.Toolbar>

            <com.roundel.csgodashboard.view.CircleRectView
                android:id="@+id/view_nade_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:transitionName="@string/transition_utility_grenade_map_img"
                app:cornerRadius="0dp"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"/>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <!--TODO: Find a way to fix the AppBar hiding when IME is shown-->
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/view_nade_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/transition_utility_grenade_root"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_map_black_24dp"
                    android:tint="@android:color/white"/>

                <TextView
                    android:id="@+id/view_nade_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingEnd="16dp"
                    android:paddingStart="72dp"
                    android:text="view_nade_map"
                    android:textColor="@color/colorMaterialLight100"
                    android:textSize="16sp"
                    android:transitionName="@string/transition_utility_grenade_map"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/view_nade_grenade_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_csgo_flashbang"/>

                <TextView
                    android:id="@+id/view_nade_grenade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingEnd="16dp"
                    android:paddingStart="72dp"
                    android:text="view_nade_grenade"
                    android:textColor="@color/colorMaterialLight100"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/view_nade_stance_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_stance_standing"/>

                <TextView
                    android:id="@+id/view_nade_stance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingEnd="16dp"
                    android:paddingStart="72dp"
                    android:text="view_nade_stance"
                    android:textColor="@color/colorMaterialLight100"
                    android:textSize="16sp"/>


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorMaterialLight12"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical"
                android:text="Tags"
                android:textAppearance="@style/TextAppearance.ListSubHeader"/>

            <com.roundel.csgodashboard.view.taglayout.TagLayout
                android:id="@+id/view_nade_tag_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin">

            </com.roundel.csgodashboard.view.taglayout.TagLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_subject_black_24dp"
                    android:tint="@android:color/white"/>

                <TextView
                    android:id="@+id/view_nade_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:maxLines="7"
                    android:paddingEnd="16dp"
                    android:paddingStart="72dp"
                    android:text="view_nade_description"
                    android:textColor="@color/colorMaterialLight100"
                    android:textSize="16sp"/>


            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>