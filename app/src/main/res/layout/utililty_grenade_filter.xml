<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Map"
            android:textAppearance="@style/TextAppearance.ListSubHeader"/>

        <Spinner
            android:id="@+id/utility_grenade_filter_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Grenade"
            android:textAppearance="@style/TextAppearance.ListSubHeader"/>

        <Spinner
            android:id="@+id/utility_grenade_filter_grenade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Jumpthrow"
            android:textAppearance="@style/TextAppearance.ListSubHeader"/>

        <Spinner
            android:id="@+id/utility_grenade_filter_jumpthrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <TextView
        style="@style/ListSubheader"
        android:layout_height="40dp"
        android:text="Tags"/>

    <com.roundel.csgodashboard.view.taglayout.TagLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:selectable="true"/>

</LinearLayout>