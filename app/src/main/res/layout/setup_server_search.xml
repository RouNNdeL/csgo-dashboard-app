<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorAccent"
    android:paddingTop="@dimen/status_bar_height">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:paddingEnd="32dp"
        android:paddingStart="32dp"
        android:text="@string/setup_server_search_title"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="32sp"/>

    <LinearLayout
        android:id="@+id/setup_server_search_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:clipChildren="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/setup_connecting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="2dp"
            android:paddingEnd="64dp"
            android:paddingStart="64dp"
            android:text="@string/setup_server_searching"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/setup_server_search_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/setup_search_server_cardview_margin"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            app:cardElevation="@dimen/cardview_default_elevation">


            <RelativeLayout
                android:id="@+id/setup_server_connection_container"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <LinearLayout
                    android:id="@+id/setup_server_connection_auto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setup_search_server_recyclerview_height"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/setup_server_search_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                    </android.support.v7.widget.RecyclerView>

                    <LinearLayout
                        android:id="@+id/setup_server_search_manual_connect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple_white_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="16dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:paddingTop="16dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_help_white_24dp"
                            android:tint="@color/colorMaterialDark50"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingStart="8dp"
                            android:text="Can't see your PC?"
                            android:textColor="@color/colorMaterialDark50"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/setup_server_connection_manual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="16dp"
                        android:paddingTop="0dp">

                        <ImageView
                            android:id="@+id/setup_server_back_to_auto"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@drawable/ripple_borderless"
                            android:clickable="true"
                            android:contentDescription="back to automatic search"
                            android:padding="8dp"
                            android:src="@drawable/ic_arrow_back_white_24dp"
                            android:tint="@color/colorMaterialDark54"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Manual connection"
                            android:textColor="@color/colorMaterialDark54"
                            android:textSize="24sp"/>
                    </LinearLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/setup_server_manual_host_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/ThemeOverlay.AppCompat.Light">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/setup_server_manual_host"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="IP Address"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/setup_server_manual_port_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/ThemeOverlay.AppCompat.Light">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/setup_server_manual_port"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Port"
                            android:inputType="number"/>
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/setup_server_connection_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/setup_server_connection_bar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:theme="@style/PrimaryAccent"/>

                <ImageView
                    android:id="@+id/setup_server_connection_success"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/green_success_circle"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/setup_server_connection_failure"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/red_failure_circle"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/setup_server_connection_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="@string/setup_server_search_allow_connection"
                    android:textAlignment="gravity"
                    android:textColor="@color/colorMaterialDark87"
                    android:textSize="16sp"/>
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/setup_server_search_action_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:backgroundTint="?android:attr/colorPrimary"
            android:text="Refresh"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>