<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MoneyChart">
        <attr name="lineColor" format="color"/>
        <attr name="circleColor" format="color"/>
        <attr name="circleHoleColor" format="color"/>
        <attr name="circleSize" format="dimension"/>
        <attr name="circleHoleSize" format="dimension"/>
        <attr name="lineWidth" format="dimension"/>
        <attr name="useHole" format="boolean"/>
        <attr name="autoSizeHole" format="boolean"/>
        <attr name="halfLineWidth" format="dimension"/>
        <attr name="halfLineColor" format="color"/>
        <attr name="showHalfLine" format="boolean"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="activationArea" format="dimension"/>
        <attr name="showActivationArea" format="boolean"/>
        <attr name="selectedCircleColor" format="color"/>
        <attr name="selectedCircleSize" format="dimension"/>
        <attr name="popupColor" format="color"/>
        <attr name="showHoleSelected" format="boolean"/>
        <attr name="popupCornerRadius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FillingIcon">
        <attr name="strokeWidth" format="dimension"/>
        <attr name="strokeColor" format="color"/>
        <attr name="fillColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="animateValueChanges" format="boolean"/>
        <attr name="pathData" format="string"/>
        <attr name="direction" format="enum">
            <enum name="bottom_top" value="0"/>
            <enum name="top_bottom" value="1"/>
            <enum name="start_end" value="2"/>
            <enum name="end_start" value="3"/>
        </attr>

    </declare-styleable>

    <declare-styleable name="TagLayout">
        <attr name="editable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="CircleRectView">
        <attr name="cornerRadius" format="dimension"/>
    </declare-styleable>
</resources>