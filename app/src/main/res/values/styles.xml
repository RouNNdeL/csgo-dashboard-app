<resources>

    <!--Actual theme used in manifest-->
    <style name="DashboardTheme" parent="AppTheme.Light"/>

    <style name="DashboardTheme.ViewNade" parent="AppTheme.Light.ViewNade"/>

    <style name="DashboardTheme.Gallery" parent="AppTheme.Gallery"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="android:colorBackgroundFloating">@color/grey900</item>
        <item name="fillingIconBackgroundColor">@color/colorMaterialLight12</item>
        <item name="colorTt">@color/yellowTtLight</item>
        <item name="colorCt">@color/blueCtLight</item>
        <item name="iconColor">?android:textColorPrimary</item>
        <item name="dividerColor">@color/colorMaterialLight12</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/AppTheme.Light.Toolbar</item>
        <item name="fillingIconBackgroundColor">@color/colorMaterialDark12</item>
        <item name="colorTt">@color/yellowTtDark</item>
        <item name="colorCt">@color/blueCtDark</item>
        <item name="iconColor">?android:textColorSecondary</item>
        <item name="dividerColor">@color/colorMaterialDark12</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/colorMaterialDark87</item>
        <item name="android:textColorSecondary">@color/colorMaterialDark54</item>
        <item name="actionMenuTextColor">?android:textColorPrimary</item>
    </style>

    <style name="AppTheme.Light.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/colorMaterialLight100</item>
        <item name="android:textColorSecondary">@color/colorMaterialLight87</item>
        <item name="actionMenuTextColor">?android:textColorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="PrimaryAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat"/>

    <style name="TextAppearance.ServerRowName" parent="TextAppearance">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorMaterialDark87</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.ServerRowHost" parent="TextAppearance">
        <item name="android:textColor">@color/colorMaterialDark50</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.ArmorHealthValues" parent="TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.ListSubHeader" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="TextAppearance.SetupTitle" parent="TextAppearance">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.TeamTitle" parent="TextAppearance">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Score" parent="TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="TextAppearance.Side" parent="TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.StatsName" parent="TextAppearance">
        <item name="android:textAlignment">gravity</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.StatsAmount" parent="TextAppearance">
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.RoundTime" parent="TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.RoundTimeTitle" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="TextAppearance.RoundNo" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.ListPrimary">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.ListSecondary">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LightDialog" parent="AlertDialog.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@color/colorMaterialDark87</item>
    </style>

    <style name="ListSubheader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.ListSubHeader</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="AppTheme.Light.Fullscreen">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerArrowStyle</item>
    </style>

    <style name="AppTheme.Gallery" parent="AppTheme.Light.Fullscreen">
        <item name="android:colorEdgeEffect">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.ViewNade">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Light.ViewNade">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="WhiteDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="WhiteIconToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
