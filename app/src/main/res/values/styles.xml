<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/primary_text_dark</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="android:textColorPrimaryInverse">@android:color/primary_text_light</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="PrimaryAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    
    <style name="TextListSubHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorMaterialLight50</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextSetupTitle" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="TextTeamTitle" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorMaterialLight54</item>
    </style>
    
    <style name="TextGameScore" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">44sp</item>
        <item name="android:textAlignment">gravity</item>
    </style>

    <style name="TextGameSide" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextGameStatsName" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">gravity</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorMaterialLight54</item>
    </style>
    
    <style name="TextGameStatsAmount" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="TextGameServerRowName" parent="TextAppearance.AppCompat">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorMaterialDark87</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextGameServerRowHost" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorMaterialDark50</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
